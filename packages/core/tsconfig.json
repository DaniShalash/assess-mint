{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext"],
    "types": ["jest"],
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "strict": true,
    "alwaysStrict": true,
    "emitDeclarationOnly": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "paths": {
      "@config/*": ["config/*"],
      "@enums/*": ["enums/*"],
      "@models/*": ["models/*"],
      "@validators/*": ["validators/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "**/*.d.ts"]
}
